{% extends 'basefront.html.twig' %}

{% block title %}Depot{% endblock %}

{% block body %}
    <div class="container col-5 mt-5">
        <div class="card shadow-lg border-0 text-center">
            <div class="card-body">
                <h3 class="card-title text-center">{{ depot.nomDepot }}</h3>
                <h6 class="card-subtitle text-muted text-center">{{ depot.localisationDepot }}</h6>
                <hr>
                <p class="card-text ">
                     <strong>Capacité:</strong> {{ depot.capaciteDepot }} {{ depot.uniteCapDepot }}<br>
                    <strong>Type de stockage:</strong> {{ depot.typeStockageDepot }}<br>
                    <strong>Statut:</strong> {{ depot.statutDepot }}
                </p>
                <div class="">
                     <a href="{{ path('app_depot_edit', {'id': depot.id}) }}" class="btn btn-warning">Modifier</a>
                </div>
                <div class="mt-3">
                    {{ include('depot/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
    <hr>
    <h1 class="text-center">List des ressource dans le depot</h1>
    <hr>
<div class="row mt-5 ">
    {% for ressource in depot.ressource %}
        <div class="col-md-3 mb-4 m-4">
                    <div class="card shadow-sm border-0">
                        <div class="card-body">
                            <h5 class="card-title">{{ ressource.nomRessource }}</h5>
                            <h6 class="card-subtitle text-muted">{{ ressource.typeRessource }}</h6>
                            <p class="card-text mt-2">
                                <strong>Quantité:</strong> {{ ressource.quantiteRessource }} {{ ressource.uniteMesure }}<br>
                                <strong>Ajouté le:</strong> {{ ressource.dateAjoutRessource ? ressource.dateAjoutRessource|date('Y-m-d') : 'N/A' }}<br>
                                <strong>Expiration:</strong> {{ ressource.dateExpirationRessource ? ressource.dateExpirationRessource|date('Y-m-d') : 'N/A' }}<br>
                                <strong>Statut:</strong> {{ ressource.statutRessource }}
                            </p>
                            <div class="d-flex justify-content-between">
                                <a href="{{ path('app_ressource_show', {'id': ressource.id}) }}" class="btn btn-primary">Voir</a>
                                <a href="{{ path('app_ressource_edit', {'id': ressource.id}) }}" class="btn btn-warning">Modifier</a>
                            </div>
                        </div>
                    </div>
                </div>
    {% endfor %}
</div>
{% endblock %}
